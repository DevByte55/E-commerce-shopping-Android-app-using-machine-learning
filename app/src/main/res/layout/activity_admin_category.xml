<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnSecondary"
    tools:context=".AdminCategoryActivity">



    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:text="Add New Products"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">



        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tshirts"
            />
        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sports"
            />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses"
            />

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/sweather"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/glasses"
            />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"
            />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"
            />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"
            android:layout_marginStart="16dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/food_categorey"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/food"
        />

    <ImageView
        android:id="@+id/healthcare"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:src="@drawable/healthcare"
        />

    <ImageView
        android:id="@+id/household"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/household"
        />

    <ImageView
        android:id="@+id/stationery"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/stationery"
        android:layout_marginStart="16dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear4_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:ignore="NotSibling">

        <ImageView
            android:id="@+id/bedding"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bedding"
            />

        <ImageView
            android:id="@+id/baggage"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/baggage"
            />

        <ImageView
            android:id="@+id/virtual"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/virtual"
            />

        <ImageView
            android:id="@+id/sportss"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/sportss"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear6_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear5_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/schoolbag"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/schoolbag"
            />

        <ImageView
            android:id="@+id/calculator"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/calculator"
            />

        <ImageView
            android:id="@+id/notebook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/notebook"
            />

        <ImageView
            android:id="@+id/bookss"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/bookss"
            android:layout_marginStart="16dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear7_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear6_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:ignore="NotSibling">

        <ImageView
            android:id="@+id/makeup"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/makeup"
            />

        <ImageView
            android:id="@+id/foam"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/foam"
            />

        <ImageView
            android:id="@+id/personalhygiene"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/personalhygiene"
            />

        <ImageView
            android:id="@+id/skincare"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/skincare"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/check_orders_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorOnSecondary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="710dp"

            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            app:srcCompat="@drawable/checkorder"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/admin_logout_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorOnSecondary"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="710dp"

            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            app:srcCompat="@drawable/logoutbtn"
            android:adjustViewBounds="true"
            android:padding="7dp"
            android:scaleType="fitCenter"
            />




    </LinearLayout>




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


</RelativeLayout>
